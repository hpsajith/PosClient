<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ites.pos.main_activity">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iteslogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">

        <!-- Splash screen -->
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name="com.ites.pos.Activities.pos_splash.PosSplash"
            android:label="@string/app_name"
            android:theme="@style/MaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name="com.ites.pos.Activities.login.Login"
            android:label="@string/app_name"
            android:theme="@style/MaterialTheme" />

        <!-- Main activity -->
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name="com.ites.pos.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MaterialTheme" />

        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name="com.ites.pos.Activities.login.LoginSuccess"/>
    </application>

</manifest>