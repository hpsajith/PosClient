<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="5"
        android:id="@+id/reservRoomList"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Room No"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_width="92dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Guest Name"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Package"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Comments"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/managerList"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="600dp"
        android:layout_alignParentTop="true">

        <TextView
            android:text="Account Number"
            android:layout_height="wrap_content"
            android:id="@+id/mName"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_width="300dp"
            android:gravity="center"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Account Name"
            android:layout_height="wrap_content"
            android:id="@+id/accNo"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_width="300dp"
            android:gravity="center"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/selectGuestList"
        android:layout_height="240dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/selectGuestList"
        android:layout_margin="5dp"
        android:id="@+id/numberPicker"
        android:weightSum="1">

        <TextView
            android:text="Adults Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:gravity="right"
            android:padding="10dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/adultCount"
            android:gravity="center" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/childrenCount"
            android:gravity="center"
            android:layout_marginLeft="20dp" />

        <TextView
            android:text="Kids Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.06" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true">

        <Button
            android:text="Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cntBtn"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="right|center_vertical"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>