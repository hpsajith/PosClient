<resources>

    <style name="MaterialTheme" parent="MaterialTheme.Base">

    </style>

    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/NavigationButtonCustom</item>
    </style>

    <style name="tabLayoutTextCustom" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="NavigationButtonCustom" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">96dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="toolbarTitleTextCustom" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
