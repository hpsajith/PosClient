<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item_punching"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ites.pos.Activities.ItemPunching"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:weightSum="1"
        android:layout_weight="0.1"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/kotInfo"
            android:layout_weight="0.7"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="KOT No:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />

                    <TextView
                        android:text="#0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kotNo"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:id="@+id/billDetailsHeader"
                    android:weightSum="1">

                    <TextView
                        android:text="Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView24"
                        android:layout_weight="0.25"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="Quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView23"
                        android:layout_weight="0.25"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22"
                        android:layout_weight="0.25"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="Tax Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView21"
                        android:layout_weight="0.25"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:id="@+id/billDetails">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/itemPunchContainer"
            android:layout_weight="0.3"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/guestDetailsHeader"
                android:layout_weight="0.8"
                android:gravity="right"
                android:background="#e6e6e6">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="679dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:padding="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="295dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:text="Time: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:text="Meal Period: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:text="Guest Name: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:text="Adults Count: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView16"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:text="Kids Count: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="307dp"
                        android:layout_height="match_parent"
                        android:id="@+id/reservRoom">

                        <TextView
                            android:text="Room No: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:text="Confirmation No:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView20"
                            android:text="Food Package: "
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:text="Change Oder Info"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button"
                    android:id="@+id/changeOrderInfp"
                    android:gravity="center_horizontal|center"
                    android:textColor="@color/textColorPrimary"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listFlow"
                android:layout_weight="0.2"
                android:layout_marginTop="10dp">
                <ListView android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/family"
                    android:layout_weight="0.3" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/master"
                    android:layout_weight="0.3"
                    android:visibility="invisible" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item"
                    android:layout_weight="0.3"
                    android:visibility="invisible" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:id="@+id/subItem"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonsContainer"
        android:layout_weight="0.9"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <Button
            android:text="Change price"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeBtn"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="1"
            android:layout_margin="5dp" />

        <Button
            android:text="Remark"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remarkBtn"
            android:textColor="@color/textColorPrimary"
            android:layout_weight="1"
            android:layout_margin="5dp" />

        <Button
            android:text="Enter"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterBtn"
            android:layout_weight="1"
            android:textColor="@color/textColorPrimary"
            android:layout_margin="5dp" />

        <Button
            android:text="Exit"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exitBtn"
            android:layout_weight="1"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:layout_margin="5dp" />
    </LinearLayout>
</LinearLayout>
