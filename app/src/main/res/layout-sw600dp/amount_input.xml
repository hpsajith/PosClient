<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#88000000">

    <LinearLayout
        android:layout_gravity="center"
        android:background="@color/popupBg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/popupHeader"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/itemNamePunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:paddingRight="40dp"
                android:paddingLeft="40dp" />

            <ImageButton
                android:id="@+id/closeBtn_Punch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#00FFFFFF"
                android:contentDescription="fef"
                android:elevation="5dp"
                app:srcCompat="@drawable/ic_close_black_32dp" />

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/amount"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:maxLength="2" />

        <Button
            android:text="Punch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/punchBtn"
            android:background="@drawable/button"
            android:textSize="18sp"
            android:textColor="@color/textColorPrimary"
            android:layout_margin="10dp" />

    </LinearLayout>
</FrameLayout>