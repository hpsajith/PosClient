<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_restaurant_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/flash_bg"
        android:contentDescription="@string/background_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/login_content_layout"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="25dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/login_success_hint"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/select_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aaffffff"
            android:elevation="5dp"
            android:padding="8dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_meal"
            android:background="#aaffffff"
            android:elevation="5dp"
            android:padding="8dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/select_rest_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/button"
            android:elevation="10dp"
            android:text="@string/continue_btn_txt"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>